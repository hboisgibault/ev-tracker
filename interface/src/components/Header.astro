---
import { loadZones } from '../utils/data.js';
// Zones are loaded as an array of objects: { code, name, slug, ... }
const zones = loadZones();
---
<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="flex items-center gap-3 text-2xl font-bold text-gray-900 tracking-tighter hover:text-gray-700 transition-colors">
            <img src="/favicon.svg" alt="EV Tracker Logo" class="h-8 w-8" />
            EV Tracker
          </a>
        </div>
        <nav class="hidden sm:ml-6 sm:flex sm:space-x-8 items-center">
          <div class="relative group">
            <button class="inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-700 hover:text-gray-900">
              Countries
              <svg class="ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-64 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-2">
                <input 
                  type="text" 
                  placeholder="Search countries..." 
                  class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                  id="country-search-desktop"
                />
              </div>
              <div class="max-h-80 overflow-y-auto py-1" role="menu" aria-orientation="vertical" aria-labelledby="options-menu" id="country-list-desktop">
                {zones.map((zone) => (
                  <a href={`/country/${zone.slug}/ev-market-share`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 country-item" role="menuitem" data-name={zone.name.toLowerCase()}>
                    {zone.name}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </nav>
      </div>
      <div class="flex items-center gap-4">
        <button id="mobile-menu-button" class="sm:hidden text-gray-700 hover:text-gray-900 p-2">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <a href="https://github.com/hboisgibault/ev-tracker" target="_blank" rel="noopener noreferrer" class="text-gray-800 hover:text-black">
          <span class="sr-only">GitHub</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden sm:hidden border-t border-gray-200 bg-white">
    <div class="px-4 py-3">
      <div class="mb-3">
        <input 
          type="text" 
          placeholder="Search countries..." 
          class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          id="country-search-mobile"
        />
      </div>
      <div class="max-h-96 overflow-y-auto space-y-1" id="country-list-mobile">
        {zones.map((zone) => (
          <a href={`/country/${zone.slug}/ev-market-share`} class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900 rounded-md country-item" data-name={zone.name.toLowerCase()}>
            {zone.name}
          </a>
        ))}
      </div>
    </div>
  </div>
</header>

<script>
  // Desktop search functionality
  const searchInputDesktop = document.getElementById('country-search-desktop');
  const countryListDesktop = document.getElementById('country-list-desktop');
  
  if (searchInputDesktop && countryListDesktop) {
    searchInputDesktop.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
      const items = countryListDesktop.querySelectorAll('.country-item');
      
      items.forEach((item) => {
        const name = item.getAttribute('data-name') || '';
        if (name.includes(searchTerm)) {
          (item as HTMLElement).style.display = 'block';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    });
  }

  // Mobile search functionality
  const searchInputMobile = document.getElementById('country-search-mobile');
  const countryListMobile = document.getElementById('country-list-mobile');
  
  if (searchInputMobile && countryListMobile) {
    searchInputMobile.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
      const items = countryListMobile.querySelectorAll('.country-item');
      
      items.forEach((item) => {
        const name = item.getAttribute('data-name') || '';
        if (name.includes(searchTerm)) {
          (item as HTMLElement).style.display = 'block';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    });
  }

  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
